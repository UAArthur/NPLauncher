<Application x:Class="BPLauncher.XAMLs.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ni="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <ni:TaskbarIcon x:Key="TrayIcon"
                        IconSource="pack://application:,,,/BPLauncher;component/Assets/img/iconmedium.ico"
                        ToolTipText="BPLauncher"
                        Visibility="Visible">
            <ni:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" Click="TrayIcon_Open_Click" />
                    <MenuItem Header="Exit" Click="TrayIcon_Exit_Click" />
                </ContextMenu>
            </ni:TaskbarIcon.ContextMenu>
        </ni:TaskbarIcon>
    </Application.Resources>
</Application>