<UserControl x:Class="BPLauncher.XAMLs.UC.SettingsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Height="250" Width="300"
             Background="Transparent"
             mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="SemiTransparentBackground" Color="#1E1E1E" Opacity="0.5" />

        <!-- Button Style for Rounded Button -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#626262" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5,10,0" />
            <Setter Property="Margin" Value="10,0,10,5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2E2E2E" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource SemiTransparentBackground}" CornerRadius="10" Padding="10">
        <Grid>
            <ListBox Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch">
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Button Style="{StaticResource RoundedButtonStyle}" Content="General" />
                </ListBoxItem>
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Button Style="{StaticResource RoundedButtonStyle}" Content="Game Settings" />
                </ListBoxItem>
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Button Style="{StaticResource RoundedButtonStyle}" Content="About" />
                </ListBoxItem>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
